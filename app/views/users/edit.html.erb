<div class="row form">
  <div class="col-lg-12">
    <%= form_for current_user do |f| %>
      <h2>登録情報</h2>
      <div class="form-group">
        <div class="col-lg-6">
          <%= f.label :"username:" %><br />
          <%= f.text_field :nickname, autofocus: true, maxlength: "8", class: 'form-control' %>
        </div>
      <div class="form-group">
        <%= f.submit "更新", class: "btn btn-primary withripple" %>
      </div>
    <% end %>
  </div>
</div>
